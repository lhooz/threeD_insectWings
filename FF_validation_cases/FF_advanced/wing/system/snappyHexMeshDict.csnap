FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

castellatedMesh true;
snap            true;
addLayers       false;

geometry
{
    "wing.stl"
    {
        type    triSurfaceMesh;
        name    wing;
    }
    
    refinementBox
    {
        type    searchableBox;
        min     (-5   -2.5  -5);
        max     ( 4   8   5);
    }

};

castellatedMeshControls
{
    maxLocalCells 4000000;
    maxGlobalCells 100000000;
    minRefinementCells 10;
    maxLoadUnbalance 0.1;
    nCellsBetweenLevels 4;

    features 
    (
        { 
        file "wing.eMesh"; 
        levels ((0.15 6) (0.45 5) (1.35 4) (2.7 3) (4.5 2));
        }
    );

    refinementSurfaces
    {
        wing
        {
            level (6 6);
        }
    }

    resolveFeatureAngle 30;

    refinementRegions
    {
        /*refinementBox
        {
            mode inside;
            levels ((1e15 2));
        }*/
    }

    locationInMesh (0 0 0.1);
    allowFreeStandingZoneFaces true;
}

snapControls
{
    nSmoothPatch 3;
    tolerance 4.0;
    nSolveIter 30;
    nRelaxIter 1;
    nFeatureSnapIter 1;
    //nFaceSplitInterval 15;
    implicitFeatureSnap true;
    explicitFeatureSnap false;
    multiRegionFeatureSnap false;
}

addLayersControls
{

}

meshQualityControls
{
    maxNonOrtho 65;
    maxBoundarySkewness 4;
    maxInternalSkewness 4;
    maxConcave 80;
    minVol -1E30;
    minTetQuality -1E30;
    minArea -1;
    minTwist 0.02;
    minDeterminant 0.001;
    minFaceWeight 0.05;
    minVolRatio 0.01;
    minTriangleTwist -1;
    nSmoothScale 4;
    errorReduction 0.75;
    relaxed
    {
        maxNonOrtho 75;
    }
}

mergeTolerance 1e-6;

